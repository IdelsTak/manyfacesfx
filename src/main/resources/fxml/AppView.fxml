<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXToggleNode?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.idelstak.manyfacesfx.ui.controllers.AppViewController">
   <children>
      <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
         <children>
            <VBox fx:id="masterBox" styleClass="master-view" HBox.hgrow="NEVER" />
            <VBox fx:id="viewBox" styleClass="detail-view" HBox.hgrow="ALWAYS">
               <children>
                  <HBox fx:id="titleBox" styleClass="title-pane">
                     <children>
                        <Label fx:id="titleLabel" styleClass="title-label" text="Plugins" HBox.hgrow="ALWAYS" />
                        <JFXToggleNode fx:id="notificationsToggle" onAction="#showNotification">
                           <graphic>
                              <FontIcon />
                           </graphic>
                        </JFXToggleNode>
                     </children>
                     <VBox.margin>
                        <Insets right="6.0" />
                     </VBox.margin>
                  </HBox>
                  <StackPane fx:id="detailPane" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
   <stylesheets>
      <URL value="@../styles/app.css" />
      <URL value="@../styles/main-view.css" />
   </stylesheets>
</StackPane>
