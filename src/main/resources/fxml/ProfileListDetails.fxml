<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXToggleNode?>
<?import java.net.URL?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>


<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TitledPane fx:id="actionsPane">
         <content>
            <HBox fx:id="actionsBox" prefHeight="100.0" prefWidth="200.0" styleClass="actions-pane">
               <children>
                  <JFXCheckBox />
                  <JFXButton text="Select all" />
                  <JFXButton layoutX="104.0" layoutY="20.0" text="Delete" />
                  <JFXButton layoutX="104.0" layoutY="20.0" text="Move to a group" />
                  <JFXButton layoutX="161.0" layoutY="20.0" text="Remove from a group" />
               </children>
            </HBox>
         </content>
      </TitledPane>
      <HBox fx:id="searchPane" styleClass="search-pane">
         <children>
            <JFXTextField fx:id="searchField" labelFloat="true" promptText="Search profiles..." />
            <HBox fx:id="spacerBox" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
            <JFXToggleNode fx:id="showActionsToggle" styleClass="actions-button">
               <graphic>
                  <FontIcon />
               </graphic>
            </JFXToggleNode>
            <JFXButton fx:id="refreshButton" styleClass="refresh-button">
               <graphic>
                  <FontIcon />
               </graphic>
            </JFXButton>
         </children>
      </HBox>
      <HBox fx:id="headersBox" prefHeight="100.0" prefWidth="200.0" />
      <Accordion fx:id="profileListAccordion" />
   </children>
   <stylesheets>
      <URL value="@../styles/app.css" />
      <URL value="@../styles/profile-list-details.css" />
   </stylesheets>
</VBox>
